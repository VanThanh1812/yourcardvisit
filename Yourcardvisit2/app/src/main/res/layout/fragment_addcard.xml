<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:id="@+id/actyAddcard"
android:orientation="vertical"
tools:context="com.example.vanthanh.ecard.Activity.AddCard">

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rv_centered="true">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Key: .................."
        android:gravity="center"
        android:textColor="@color/textwhile"
        android:background="@drawable/font"
        android:id="@+id/txtKey"
        android:layout_gravity="center_horizontal" />
    </com.andexert.library.RippleView>
    <LinearLayout
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="355.96dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:id="@+id/yourcard">


    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID"
        android:id="@+id/textView" />
    <ImageView
        android:layout_marginLeft="240dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:drawable/sym_def_app_icon"
        android:id="@+id/imgCongty"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Họ và tên"
        android:id="@+id/textView2" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Công ty"
        android:id="@+id/textView3" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Chức vụ"
        android:id="@+id/textView4" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView5" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Địa chỉ"
        android:id="@+id/textView6" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Số điện thoại"
        android:id="@+id/textView7" />
</LinearLayout>

    <com.andexert.library.RippleView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rv_centered="true">



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add card to list your card"
        android:id="@+id/btnAddtoList"
        android:background="@drawable/font"
        android:textColor="@color/textwhile"
        android:layout_gravity="center_horizontal" />
    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rv_centered="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/textwhile"
            android:background="@drawable/font"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal" />

    </com.andexert.library.RippleView>
</LinearLayout>
